#!/bin/bash -e


source $OPENSHIFT_CARTRIDGE_SDK_BASH

#mkdir -p $OPENSHIFT_DATA_DIR/.rls/data

echo "running initdb....`date`"

$OPENSHIFT_PGRLS_PATH_ELEMENT/initdb -D $OPENSHIFT_DATA_DIR/.pg/data

client_result "completed running initdb ....`date`"

client_result "configuring standalone postgres server this time"
erb  $OPENSHIFT_PGRLS_DIR/conf/pg_hba.conf.erb > $OPENSHIFT_DATA_DIR/.pg/data/pg_hba.conf
erb  $OPENSHIFT_PGRLS_DIR/conf/postgresql.conf.erb > $OPENSHIFT_DATA_DIR/.pg/data/postgresql.conf

